<!-- Business Verification Status Email Template -->
<div style="text-align: left; max-width: 100%;">

  <!-- Main Heading -->
  <h1 style="font-size: 28px; font-weight: 600; color: #1a1a1a; margin: 0 0 25px 0; line-height: 1.3;">
    <% if (status === 'verified') { %>
      Your Business is Now Verified!
    <% } else if (status === 'under_review') { %>
      Business Verification Under Review
    <% } else if (status === 'rejected') { %>
      Business Verification Update
    <% } else { %>
      Business Verification Status Update
    <% } %>
  </h1>

  <!-- Greeting -->
  <p style="font-size: 16px; color: #666; margin: 0 0 30px 0; line-height: 1.6;">
    Dear <strong style="color: #2C5270;"><%= name %></strong>,
  </p>

  <!-- Status Message -->
  <% if (status === 'verified') { %>
    <div style="background: linear-gradient(135deg, #e8f5e8 0%, #d4edda 100%); border: 1px solid #28a745; border-radius: 12px; padding: 25px; margin: 25px 0;">
      <div style="display: flex; align-items: center; margin-bottom: 15px;">
        <div style="background: #28a745; color: white; border-radius: 50%; width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; font-size: 20px; margin-right: 15px; font-weight: bold;">‚úì</div>
        <h3 style="color: #155724; font-size: 18px; font-weight: 600; margin: 0;">Congratulations! Your business is verified</h3>
      </div>
      <p style="color: #155724; font-size: 15px; margin: 0; line-height: 1.6;">
        <strong><%= businessName %></strong> has been successfully verified and is now live on CrediScore! Your customers can now see your verified status and trust your business.
      </p>
    </div>

    <!-- Benefits of Verification -->
    <div style="background: #f8f9fa; border-radius: 8px; padding: 20px; margin: 25px 0;">
      <h4 style="color: #2C5270; font-size: 16px; font-weight: 600; margin: 0 0 15px 0;">What this means for your business:</h4>
      <ul style="color: #555; font-size: 14px; line-height: 1.7; margin: 0; padding-left: 20px;">
        <li style="margin-bottom: 8px;">‚úÖ Verified badge displayed on your business profile</li>
        <li style="margin-bottom: 8px;">‚úÖ Higher visibility in search results</li>
        <li style="margin-bottom: 8px;">‚úÖ Increased customer trust and confidence</li>
        <li style="margin-bottom: 8px;">‚úÖ Access to premium business features</li>
      </ul>
    </div>

  <% } else if (status === 'under_review') { %>
    <div style="background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%); border: 1px solid #ffc107; border-radius: 12px; padding: 25px; margin: 25px 0;">
      <div style="display: flex; align-items: center; margin-bottom: 15px;">
        <div style="background: #ffc107; color: #856404; border-radius: 50%; width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; font-size: 20px; margin-right: 15px; font-weight: bold;">‚è±</div>
        <h3 style="color: #856404; font-size: 18px; font-weight: 600; margin: 0;">Verification in progress</h3>
      </div>
      <p style="color: #856404; font-size: 15px; margin: 0 0 10px 0; line-height: 1.6;">
        Thank you for submitting your business verification documents. Our team is currently reviewing your application for <strong><%= businessName %></strong>.
      </p>
      <p style="color: #856404; font-size: 14px; margin: 0; line-height: 1.6;">
        We'll notify you within 2-3 business days once the review is complete.
      </p>
    </div>

  <% } else if (status === 'rejected') { %>
    <div style="background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%); border: 1px solid #dc3545; border-radius: 12px; padding: 25px; margin: 25px 0;">
      <div style="display: flex; align-items: center; margin-bottom: 15px;">
        <div style="background: #dc3545; color: white; border-radius: 50%; width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; font-size: 20px; margin-right: 15px; font-weight: bold;">!</div>
        <h3 style="color: #721c24; font-size: 18px; font-weight: 600; margin: 0;">Additional information needed</h3>
      </div>
      <p style="color: #721c24; font-size: 15px; margin: 0 0 15px 0; line-height: 1.6;">
        We've reviewed your verification documents for <strong><%= businessName %></strong>, but we need some additional information to complete the verification process.
      </p>
      
      <% if (rejectionReason) { %>
        <div style="background: rgba(220, 53, 69, 0.1); border-radius: 6px; padding: 15px; margin: 15px 0;">
          <h4 style="color: #721c24; font-size: 14px; font-weight: 600; margin: 0 0 8px 0;">Reason for review:</h4>
          <p style="color: #721c24; font-size: 14px; margin: 0; line-height: 1.6;"><%= rejectionReason %></p>
        </div>
      <% } %>
    </div>

  <% } else { %>
    <div style="background: #f8f9fa; border-radius: 8px; padding: 20px; margin: 25px 0;">
      <h3 style="color: #2C5270; font-size: 16px; font-weight: 600; margin: 0 0 10px 0;">Verification Status Update</h3>
      <p style="color: #666; font-size: 15px; margin: 0; line-height: 1.6;">
        Your business verification status has been updated. Please check your dashboard for more details.
      </p>
    </div>
  <% } %>

  <!-- Next Steps -->
  <div style="background: #f0f8ff; border-radius: 8px; padding: 20px; margin: 25px 0;">
    <h3 style="color: #2C5270; font-size: 16px; font-weight: 600; margin: 0 0 15px 0;">Next Steps</h3>
    
    <% if (status === 'verified') { %>
      <div style="margin-bottom: 15px;">
        <p style="color: #666; font-size: 14px; margin: 0 0 10px 0;">üöÄ <strong>Ready to grow?</strong> Access your business dashboard to:</p>
        <ul style="color: #555; font-size: 13px; line-height: 1.6; margin: 0; padding-left: 20px;">
          <li>Update your business information</li>
          <li>Manage customer reviews</li>
          <li>View analytics and insights</li>
          <li>Add payment methods</li>
        </ul>
      </div>
    <% } else if (status === 'rejected') { %>
      <div style="margin-bottom: 15px;">
        <p style="color: #666; font-size: 14px; margin: 0 0 10px 0;">üìù <strong>Action required:</strong> Please review the feedback and resubmit your documents:</p>
        <ul style="color: #555; font-size: 13px; line-height: 1.6; margin: 0; padding-left: 20px;">
          <li>Review the rejection reason above</li>
          <li>Update your documents as needed</li>
          <li>Resubmit for verification</li>
          <li>Contact support if you have questions</li>
        </ul>
      </div>
    <% } else { %>
      <div style="margin-bottom: 15px;">
        <p style="color: #666; font-size: 14px; margin: 0 0 10px 0;">‚è≥ <strong>While you wait:</strong> You can still use your business dashboard to:</p>
        <ul style="color: #555; font-size: 13px; line-height: 1.6; margin: 0; padding-left: 20px;">
          <li>Complete your business profile</li>
          <li>Add additional business information</li>
          <li>Prepare for customer reviews</li>
          <li>Explore available features</li>
        </ul>
      </div>
    <% } %>
  </div>

  <!-- CTA Button -->
  <div style="text-align: center; margin: 30px 0;">
    <a href="<%= appUrl %>/business/dashboard" 
       style="display: inline-block; background: linear-gradient(135deg, #2C5270 0%, #3A6B8A 100%); color: #ffffff; text-decoration: none; padding: 15px 35px; border-radius: 8px; font-weight: 600; font-size: 16px; box-shadow: 0 4px 12px rgba(44, 82, 112, 0.3);">
      <% if (status === 'verified') { %>
        View Your Verified Business ‚Üí
      <% } else if (status === 'rejected') { %>
        Update Documents ‚Üí
      <% } else { %>
        Go to Dashboard ‚Üí
      <% } %>
    </a>
  </div>

  <!-- Support Section -->
  <div style="background: #f8f9fa; border-radius: 8px; padding: 20px; margin: 30px 0; text-align: center;">
    <h3 style="color: #2C5270; font-size: 16px; font-weight: 600; margin: 0 0 10px 0;">Questions about verification?</h3>
    <p style="color: #666; font-size: 14px; margin: 0 0 15px 0; line-height: 1.6;">
      Our verification team is here to help you through the process.
    </p>
    <a href="mailto:verification@crediscore.com" 
       style="color: #2C5270; text-decoration: none; font-weight: 500; font-size: 14px;">
      Contact Verification Team ‚Üí
    </a>
  </div>

  <!-- Closing Message -->
  <p style="font-size: 15px; color: #666; margin: 30px 0 20px 0; line-height: 1.6;">
    <% if (status === 'verified') { %>
      Thank you for choosing CrediScore Business. We look forward to supporting your business growth!
    <% } else { %>
      We appreciate your patience during the verification process.
    <% } %>
  </p>

  <p style="font-size: 15px; color: #666; margin: 0; line-height: 1.6;">
    Best regards,<br>
    <strong style="color: #2C5270;">The CrediScore Verification Team</strong>
  </p>

</div>
