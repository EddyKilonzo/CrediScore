    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            background-color: #f5f5f5;
            padding: 20px 0;
        }
        .email-wrapper {
            max-width: 600px;
            margin: 0 auto;
            background-color: #ffffff;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }
        .email-header {
            background: linear-gradient(135deg, #2C5270 0%, #3A6B8A 100%);
            padding: 40px 30px;
            text-align: left;
            position: relative;
            overflow: hidden;
        }
        .email-header::after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 200px;
            height: 100%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200"><circle cx="150" cy="50" r="80" fill="rgba(255,255,255,0.1)"/><circle cx="170" cy="80" r="40" fill="rgba(255,255,255,0.15)"/></svg>') no-repeat center;
            opacity: 0.6;
        }
        .logo {
            display: flex;
            align-items: center;
            gap: 10px;
            position: relative;
            z-index: 1;
        }
        .logo-icon {
            width: 40px;
            height: 40px;
            background: rgba(255,255,255,0.9);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            color: #2C5270;
            font-size: 20px;
        }
        .logo-text {
            color: #ffffff;
            font-size: 28px;
            font-weight: 700;
        }
        .email-body {
            padding: 40px 35px;
        }
        .email-content {
            font-size: 15px;
            color: #333;
            line-height: 1.8;
        }
        .email-content h1 {
            font-size: 24px;
            font-weight: 600;
            color: #1a1a1a;
            margin-bottom: 20px;
        }
        .user-greeting {
            font-size: 15px;
            color: #666;
            margin-bottom: 25px;
        }
        .user-greeting a {
            color: #2C5270;
            text-decoration: none;
        }
        .email-content p {
            margin: 15px 0;
        }
        .button {
            display: inline-block;
            padding: 12px 30px;
            margin: 20px 0;
            background: linear-gradient(135deg, #2C5270 0%, #3A6B8A 100%);
            color: #ffffff;
            text-decoration: none;
            border-radius: 6px;
            font-weight: 600;
            font-size: 15px;
        }
        .info-box {
            background-color: #f8f9fa;
            border-left: 4px solid #2C5270;
            padding: 18px 20px;
            margin: 25px 0;
            border-radius: 4px;
        }
        .warning-box {
            background-color: #fff8e6;
            border-left: 4px solid #ffa726;
            padding: 18px 20px;
            margin: 25px 0;
            border-radius: 4px;
        }
        .highlight {
            font-weight: 600;
            color: #1a1a1a;
        }
        .divider {
            height: 1px;
            background-color: #e0e0e0;
            margin: 25px 0;
        }
        .email-footer {
            background-color: #ffffff;
            padding: 35px 35px 25px;
            text-align: left;
            color: #888;
            font-size: 13px;
            border-top: 1px solid #e9ecef;
        }
        .footer-brand {
            font-size: 14px;
            font-weight: 600;
            color: #333;
            margin-bottom: 5px;
        }
        .footer-date {
            color: #999;
            font-size: 12px;
            margin-bottom: 20px;
        }
        .footer-support {
            margin: 20px 0;
            color: #666;
            line-height: 1.8;
        }
        .footer-support a {
            color: #4facfe;
            text-decoration: none;
            font-weight: 500;
        }
        .footer-disclaimer {
            color: #999;
            font-size: 12px;
            margin-top: 20px;
            line-height: 1.6;
        }
        .social-links {
            margin: 25px 0;
            text-align: center;
        }
        .social-links a {
            display: inline-block;
            margin: 0 8px;
            width: 36px;
            height: 36px;
            line-height: 36px;
            background-color: #f0f0f0;
            border-radius: 50%;
            color: #666;
            text-decoration: none;
            font-size: 16px;
        }
        .app-links {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin: 25px 0;
        }
        .app-link {
            text-align: center;
            text-decoration: none;
            color: #666;
            font-size: 12px;
        }
        .app-icon {
            width: 40px;
            height: 40px;
            margin: 0 auto 5px;
            background-color: #f5f5f5;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
        }
        .footer-links {
            text-align: center;
            margin: 20px 0;
            padding: 20px 0;
            border-top: 1px solid #e9ecef;
        }
        .footer-links a {
            color: #666;
            text-decoration: none;
            margin: 0 10px;
            font-size: 12px;
        }
        .footer-links a:hover {
            color: #4facfe;
        }
        .copyright {
            text-align: center;
            color: #999;
            font-size: 12px;
            margin-top: 15px;
        }
        /* Mobile Responsive Styles */
        @media only screen and (max-width: 600px) {
            .email-wrapper {
                margin: 10px;
                border-radius: 12px;
            }
            .email-body {
                padding: 25px 20px;
            }
            .email-footer {
                padding: 25px 20px 15px;
            }
            .logo-text {
                font-size: 24px;
            }
            .button {
                display: block;
                text-align: center;
                width: 100%;
                box-sizing: border-box;
            }
            .app-links {
                flex-direction: column;
                gap: 15px;
            }
            .feature-grid td {
                width: 100% !important;
                display: block;
                padding: 10px !important;
            }
            .header-padding {
                padding: 30px 20px !important;
            }
            .content-padding {
                padding: 25px 20px !important;
            }
            .footer-padding {
                padding: 20px !important;
            }
        }

        /* Card Styling */
        .email-card {
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1), 0 2px 8px rgba(0, 0, 0, 0.06);
            overflow: hidden;
            margin: 20px auto;
            max-width: 600px;
        }

        .card-header {
            background: linear-gradient(135deg, #2C5270 0%, #3A6B8A 100%);
            padding: 40px 30px;
            position: relative;
            overflow: hidden;
        }

        .card-body {
            padding: 40px 35px;
            background: #ffffff;
        }

        .card-footer {
            background: #f8f9fa;
            padding: 30px 35px 25px;
            border-top: 1px solid #e9ecef;
        }

        /* Enhanced Button Styles */
        .btn-primary {
            display: inline-block;
            background: linear-gradient(135deg, #2C5270 0%, #3A6B8A 100%);
            color: #ffffff;
            text-decoration: none;
            padding: 16px 32px;
            border-radius: 10px;
            font-weight: 600;
            font-size: 16px;
            box-shadow: 0 4px 16px rgba(44, 82, 112, 0.3);
            transition: all 0.3s ease;
            text-align: center;
        }

        .btn-secondary {
            display: inline-block;
            background: #f8f9fa;
            color: #2C5270;
            text-decoration: none;
            padding: 14px 28px;
            border-radius: 8px;
            font-weight: 500;
            font-size: 14px;
            border: 1px solid #e9ecef;
            transition: all 0.3s ease;
            text-align: center;
        }

        /* Enhanced Info Boxes */
        .info-card {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
            border-left: 4px solid #2C5270;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .warning-card {
            background: linear-gradient(135deg, #fff8e6 0%, #ffeaa7 100%);
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
            border-left: 4px solid #ffc107;
            box-shadow: 0 2px 8px rgba(255, 193, 7, 0.2);
        }

        .success-card {
            background: linear-gradient(135deg, #e8f5e8 0%, #d4edda 100%);
            border-radius: 12px;
            padding: 25px;
            margin: 25px 0;
            border-left: 4px solid #28a745;
            box-shadow: 0 2px 8px rgba(40, 167, 69, 0.2);
        }

        /* Feature Grid */
        .feature-grid {
            display: table;
            width: 100%;
            border-collapse: collapse;
            margin: 25px 0;
        }

        .feature-grid .feature-cell {
            display: table-cell;
            width: 50%;
            padding: 15px;
            vertical-align: top;
        }

        .feature-item {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 20px;
            height: 100%;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            transition: transform 0.2s ease;
        }

        .feature-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        }

        .feature-icon {
            background: #2C5270;
            color: white;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            margin-bottom: 15px;
            box-shadow: 0 2px 8px rgba(44, 82, 112, 0.3);
        }
    </style>
</head>
